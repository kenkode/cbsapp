<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8sp"
    tools:context="com.softark.eddie.xara.activities.LoginActivity">

    <ImageView
        android:id="@+id/xara_logo"
        android:layout_width="215.1sp"
        android:layout_height="94.15sp"
        android:layout_gravity="center"
        android:background="@drawable/rsz_xara_logo_land" />

    <EditText
        android:id="@+id/username_editext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4sp"
        android:hint="@string/username_textview_hint"
        android:minWidth="328sp"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/password_editext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12sp"
        android:hint="@string/password_textview_hint"
        android:inputType="textPassword"
        android:minWidth="328sp" />

    <Switch
        android:id="@+id/remember_me_switch"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8sp"
        android:splitTrack="false"
        android:text="@string/switch_text"
        android:textColor="@color/colorGrayAccent"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login_button"
        style="@style/LoginButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary" />


</LinearLayout>
