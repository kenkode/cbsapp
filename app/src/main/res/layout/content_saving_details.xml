<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_saving_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.softark.eddie.xara.activities.SavingDetailsActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:scrollbars="none"
    tools:showIn="@layout/activity_loan_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<TextView-->
        <!--android:id="@+id/loan_details_loan_name"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--tools:text="Mortgage Loan"-->
        <!--android:textColor="@color/colorPrimaryDark"-->
        <!--android:textSize="28sp"-->
        <!--android:textStyle="bold" />-->

        <android.support.v7.widget.CardView
            android:id="@+id/saving_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:layout_marginTop="16sp"
            android:paddingBottom="16sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/saving_details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16sp"
                    android:text="Saving Details"
                    android:textColor="@color/colorOrangeAccent"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/saving_account_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saving_details_title"
                    android:layout_marginBottom="16sp"
                    android:layout_marginLeft="16sp"
                    android:text="Account Number: "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/saving_account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saving_details_title"
                    android:layout_marginBottom="16sp"
                    android:layout_toRightOf="@+id/saving_account_number_text"
                    android:text="LT00001"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/saving_transaction_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saving_account_number_text"
                    android:layout_marginBottom="16sp"
                    android:layout_marginLeft="16sp"
                    android:text="Transaction Type: "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/saving_transaction_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saving_account_number_text"
                    android:layout_marginBottom="16sp"
                    android:layout_toRightOf="@+id/saving_transaction_text"
                    android:text="Type"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/saving_amount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saving_transaction_text"
                    android:layout_marginBottom="16sp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginStart="16sp"
                    android:text="Amount: "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/saving_amount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saving_transaction_text"
                    android:layout_marginBottom="16sp"
                    android:layout_toEndOf="@+id/saving_amount_text"
                    android:layout_toRightOf="@+id/saving_amount_text"
                    android:text="0.00"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/saving_transaction_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saving_amount_text"
                    android:layout_marginBottom="16sp"
                    android:layout_marginLeft="16sp"
                    android:text="Transaction Number: "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/saving_transaction_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saving_amount_text"
                    android:layout_marginBottom="16sp"
                    android:layout_toRightOf="@+id/saving_transaction_number_text"
                    android:text="CZ111111111"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/saving_payment_mode_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saving_transaction_number_text"
                    android:layout_marginBottom="16sp"
                    android:layout_marginLeft="16sp"
                    android:text="Payment Mode: "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/saving_payment_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saving_transaction_number_text"
                    android:layout_marginBottom="16sp"
                    android:layout_toRightOf="@+id/saving_payment_mode_text"
                    android:text="Mpesa"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/saving_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saving_payment_mode_text"
                    android:layout_marginBottom="16sp"
                    android:layout_marginLeft="16sp"
                    android:text="Date: "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/saving_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saving_payment_mode"
                    android:layout_marginBottom="16sp"
                    android:layout_toRightOf="@+id/saving_date_text"
                    android:text="01/01/1970"
                    android:textSize="14sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>

</ScrollView>
