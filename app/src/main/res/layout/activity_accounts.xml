<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_accounts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.softark.eddie.xara.activities.AccountsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_main" />

    </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16sp">

            <android.support.v7.widget.CardView
                android:id="@+id/profile_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80sp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="6sp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/profile_photo"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="8sp"
                        android:background="@drawable/profile_photo_container"
                        android:src="@drawable/avatar" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8sp"
                        android:layout_marginTop="16sp"
                        android:layout_toRightOf="@+id/profile_photo"
                        android:text="Edward"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/username"
                        android:layout_marginLeft="8sp"
                        android:layout_marginTop="4sp"
                        android:layout_toRightOf="@+id/profile_photo"
                        android:text="Member"
                        android:textColor="@color/colorGrayAccent" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <ListView
                android:id="@+id/memebers_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_details"
                android:layout_marginTop="16sp"></ListView>

        </RelativeLayout>

</LinearLayout>
