<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_applied_loan_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.softark.eddie.xara.AppliedLoanDetails">

    <TextView
        android:id="@+id/applied_loan_details_loan_type"
        android:text="Mortgage Loan"
        android:textSize="28sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/applied_loan_details_title"
        android:text="Loan Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16sp"
        android:textColor="@color/colorOrangeAccent"
        android:layout_below="@+id/applied_loan_details_loan_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/applied_loan_details_loan_interest_text"
        android:text="Loan Interest: "
        android:textSize="16sp"
        android:layout_below="@+id/applied_loan_details_title"
        android:layout_marginTop="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/applied_loan_details_loan_interest_input"
        android:text="12.2%"
        android:textSize="16sp"
        android:layout_below="@+id/applied_loan_details_title"
        android:layout_toRightOf="@+id/applied_loan_details_loan_interest_text"
        android:layout_marginTop="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/applied_loan_details_loan_amount_text"
        android:text="Loan Amount: "
        android:textSize="16sp"
        android:layout_below="@+id/applied_loan_details_loan_interest_text"
        android:layout_marginTop="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/applied_loan_details_loan_amount_input"
        android:text="12,000"
        android:textSize="16sp"
        android:layout_below="@+id/applied_loan_details_loan_interest_text"
        android:layout_toRightOf="@+id/applied_loan_details_loan_amount_text"
        android:layout_marginTop="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/applied_loan_details_loan_period_text"
        android:text="Loan Amount: "
        android:textSize="16sp"
        android:layout_below="@+id/applied_loan_details_loan_amount_text"
        android:layout_marginTop="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/applied_loan_details_loan_period_input"
        android:text="1 month"
        android:textSize="16sp"
        android:layout_below="@+id/applied_loan_details_loan_amount_text"
        android:layout_toRightOf="@+id/applied_loan_details_loan_amount_text"
        android:layout_marginTop="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/applied_loan_details_loan_ppm_text"
        android:text="Payment/month: "
        android:textSize="16sp"
        android:layout_below="@+id/applied_loan_details_loan_period_text"
        android:layout_marginTop="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/applied_loan_details_loan_ppm_input"
        android:text="1 month"
        android:textSize="16sp"
        android:layout_below="@+id/applied_loan_details_loan_period_text"
        android:layout_toRightOf="@+id/applied_loan_details_loan_ppm_text"
        android:layout_marginTop="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/applied_loan_details_loan_total_text"
        android:text="Total Payment: "
        android:textSize="16sp"
        android:layout_below="@+id/applied_loan_details_loan_ppm_text"
        android:layout_marginTop="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/applied_loan_details_loan_total_input"
        android:text="24,000"
        android:textSize="16sp"
        android:textColor="@color/colorOrangeAccent"
        android:textStyle="bold"
        android:layout_below="@+id/applied_loan_details_loan_ppm_text"
        android:layout_toRightOf="@+id/applied_loan_details_loan_total_text"
        android:layout_marginTop="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/applied_loan_guarantors_title"
        android:text="Guarantors"
        android:textColor="@color/colorOrangeAccent"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16sp"
        android:layout_below="@+id/applied_loan_details_loan_total_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_below="@+id/applied_loan_guarantors_title"
        android:layout_marginTop="16sp"
        android:layout_width="wrap_content"
        android:layout_above="@+id/disburse_button"
        android:layout_marginBottom="16sp"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/applied_loan_details_guarantors_listview"
            android:layout_below="@+id/applied_loan_guarantors_title"
            android:layout_marginTop="16sp"
            android:divider="@android:color/transparent"
            android:dividerHeight="8sp"
            android:layout_width="wrap_content"
            android:layout_above="@+id/disburse_button"
            android:layout_marginBottom="16sp"
            android:layout_height="wrap_content">

        </ListView>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/disburse_button"
        android:text="Disburse"
        android:backgroundTint="@color/colorGreenAccent"
        android:textColor="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_width="160sp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/reject_button"
        android:text="Reject"
        android:backgroundTint="@color/colorOrangeAccent"
        android:layout_gravity="end"
        android:textColor="@color/colorAccent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="160sp"
        android:layout_height="wrap_content" />



</RelativeLayout>
