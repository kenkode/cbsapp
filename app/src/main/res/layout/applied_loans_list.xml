<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorAccent"
    android:paddingBottom="16sp">

    <RelativeLayout
        android:id="@+id/appliend_loan_bp"
        android:layout_width="match_parent"
        android:layout_height="80sp">

        <LinearLayout
            android:id="@+id/date_frame"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:background="@drawable/loan_date_frame"
            android:orientation="vertical">

            <TextView
                android:id="@+id/applied_loan_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8sp"
                android:text="21"
                android:textColor="@color/colorGrayAccent"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/applied_loan_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-8sp"
                android:text="Feb"
                android:textColor="@color/colorGrayAccent"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/loan_borrower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="4sp"
            android:layout_below="@+id/loan_time_elapsed"
            android:layout_toRightOf="@+id/date_frame"
            android:text="Oirere Jr"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/applied_loan_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loan_borrower"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="2sp"
            android:layout_toRightOf="@+id/date_frame"
            android:text="Mortgage Loan"
            android:textColor="@color/colorGrayAccent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/applied_loan_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/applied_loan_type"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="4sp"
            android:layout_toRightOf="@+id/date_frame"
            android:text="Amount: 12000"
            android:textColor="@color/colorOrangeAccent"
            android:textSize="12sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/applied_loan_deadline"
            android:text="12-Feb-2017"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="4sp"
            android:layout_marginTop="4sp"
            android:textSize="12sp"
            android:textColor="@color/colorGrayAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/view_applied_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginRight="1sp"
            android:layout_marginBottom="1sp"
            android:text="@string/view_loan"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>
</android.support.v7.widget.CardView>